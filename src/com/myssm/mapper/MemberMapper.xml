<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.myssm.mapper.MemberMapper">
	<resultMap id="BaseResultMap" type="com.myssm.entity.Member">
		<id column="uid" jdbcType="INTEGER" property="uid" />
		<result column="user" jdbcType="VARCHAR" property="user" />
		<result column="head" jdbcType="VARCHAR" property="head" />
		<result column="sex" jdbcType="BIT" property="sex" />
		<result column="birthday" jdbcType="INTEGER" property="birthday" />
		<result column="phone" jdbcType="VARCHAR" property="phone" />
		<result column="qq" jdbcType="VARCHAR" property="qq" />
		<result column="email" jdbcType="VARCHAR" property="email" />
		<result column="password" jdbcType="VARCHAR" property="password" />
		<result column="t" jdbcType="INTEGER" property="t" />
	</resultMap>
	<sql id="Base_Column_List">
		uid, user, head, sex, birthday, phone, qq, email, password, t
	</sql>
	<select id="checkMember" parameterType="map" resultType="long">
		select count(uid) from member
		<where>
			<if test="user != null">
				user = #{user}
			</if>
		</where>
	</select>	
	<select id="getMember" parameterType="com.myssm.entity.Member"
		resultMap="BaseResultMap">
		select
		<include refid="Base_Column_List" />
		from member
		where user=#{user} and
		password=#{password}
	</select>
	<select id="getMemberList" resultType="list"
		resultMap="BaseResultMap">
		select 
		<include refid="Base_Column_List" /> 
		from member
	</select>
	<select id="pageList" parameterType="map" resultType="list"
		resultMap="BaseResultMap">
		select 
		<include refid="Base_Column_List" /> 
		from member
		<where>
			<if test="user != null">
				user like CONCAT('%', #{user},'%')
			</if>
		</where>
		order by ${orderName} ${descAsc}
		limit ${startIndex},${pageSize}
	</select>
	<select id="pageCounts" parameterType="map" resultType="long">
		select count(uid) from member
		<where>
			<if test="user != null">
				user like CONCAT('%', #{user},'%')
			</if>
		</where>
	</select>
	<select id="queryMember" parameterType="java.lang.Integer"
		resultMap="BaseResultMap">
		select
		<include refid="Base_Column_List" />
		from member
		where uid = #{uid,jdbcType=INTEGER}
	</select>
	<delete id="deleteMember" parameterType="java.lang.Integer">
		delete from member
		where uid = #{uid,jdbcType=INTEGER}
	</delete>
	<insert id="saveMember" parameterType="com.myssm.entity.Member">
		insert into member
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="uid != null">
				uid,
			</if>
			<if test="user != null">
				user,
			</if>
			<if test="head != null">
				head,
			</if>
			<if test="sex != null">
				sex,
			</if>
			<if test="birthday != null">
				birthday,
			</if>
			<if test="phone != null">
				phone,
			</if>
			<if test="qq != null">
				qq,
			</if>
			<if test="email != null">
				email,
			</if>
			<if test="password != null">
				password,
			</if>
			<if test="t != null">
				t,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="uid != null">
				#{uid,jdbcType=INTEGER},
			</if>
			<if test="user != null">
				#{user,jdbcType=VARCHAR},
			</if>
			<if test="head != null">
				#{head,jdbcType=VARCHAR},
			</if>
			<if test="sex != null">
				#{sex,jdbcType=BIT},
			</if>
			<if test="birthday != null">
				#{birthday,jdbcType=INTEGER},
			</if>
			<if test="phone != null">
				#{phone,jdbcType=VARCHAR},
			</if>
			<if test="qq != null">
				#{qq,jdbcType=VARCHAR},
			</if>
			<if test="email != null">
				#{email,jdbcType=VARCHAR},
			</if>
			<if test="password != null">
				#{password,jdbcType=VARCHAR},
			</if>
			<if test="t != null">
				#{t,jdbcType=INTEGER},
			</if>
		</trim>
	</insert>
	<update id="updateMember" parameterType="com.myssm.entity.Member">
		update member
		<set>
			<if test="user != null">
				user = #{user,jdbcType=VARCHAR},
			</if>
			<if test="head != null">
				head = #{head,jdbcType=VARCHAR},
			</if>
			<if test="sex != null">
				sex = #{sex,jdbcType=BIT},
			</if>
			<if test="birthday != null">
				birthday = #{birthday,jdbcType=INTEGER},
			</if>
			<if test="phone != null">
				phone = #{phone,jdbcType=VARCHAR},
			</if>
			<if test="qq != null">
				qq = #{qq,jdbcType=VARCHAR},
			</if>
			<if test="email != null">
				email = #{email,jdbcType=VARCHAR},
			</if>
			<if test="password != null">
				password = #{password,jdbcType=VARCHAR},
			</if>
			<if test="t != null">
				t = #{t,jdbcType=INTEGER},
			</if>
		</set>
		where uid = #{uid,jdbcType=INTEGER}
	</update>
</mapper>